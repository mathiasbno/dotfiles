[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  editor = vim

[user]
  name = Sindre Moen
  email = sindrenm@gmail.com

[color "diff"]
  whitespace = red reverse

[color]
  ui = auto

[alias]
  co    = checkout
  ci    = commit
  st    = status --ignore-submodules
  br    = branch -v
  df    = diff --ignore-submodules
  hist  = log --graph --pretty=format:'%C(red)%h%Creset %C(green)%ad%Creset | %s%C(yellow)%d%Creset %C(bold blue)<%an>%Creset' --date=short
  last  = "!f() { git hist --max-count $1; }; f"
  pr    = pull --rebase --ff-only
  gtfo  = push
  gief  = pull
  stag  = push staging staging:master

[github]
  user = sindrenm

[push]
  default = simple
[clean]
  requireForce = false
