[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  editor = vim

[user]
  name = Sindre Moen
  email = sindrenm@gmail.com

[color "diff"]
  whitespace = red reverse

[color]
  ui = auto

[alias]
  co          = checkout
  cb          = checkout -b
  ci          = commit -v
  st          = status -s
  br          = branch -v
  df          = diff
  hist        = log --graph --pretty=format:'%C(red)%h%Creset %C(green)%ad%Creset | %s%C(yellow)%d%Creset %C(bold blue)<%an>%Creset' --date=short
  lg          = log --oneline --decorate --graph
  last        = "!f() { git hist --max-count $1; }; f"
  pr          = pull --rebase --ff-only
  stag        = push staging develop:master
  prod        = push production master:master
  dfc         = diff --cached
  bicep       = bisect

[github]
  user = sindrenm

[push]
  default = simple

[clean]
  requireForce = false

[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
